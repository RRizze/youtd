{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  },
  "rules": {
    "new-parens": true,
    "ordered-imports": false,
    "member-access": false,
    "no-string-literal": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "interface-over-type-literal": true,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "arrow-parens": true,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "no-eval": true,
    "no-any": true,
    "no-empty-interface": true,
    "no-duplicate-switch-case": true,
    "switch-default": true,
    "object-literal-sort-keys": false,
    "no-shadowed-variable": false,
    "use-isnan": true,
    "comment-format": false,
    "no-trailing-whitespace": [
      true,
      "ignore-comments",
      "ignore-jsdoc",
      "ignore-blank-lines"
    ],
    "quotemark": [
      true,
      "double",
      "avoid-escape",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": []
}