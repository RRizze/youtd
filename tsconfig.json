{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "noLib": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "webpack",
    "build",
    "jest",
    "src/setupTests.js",
    "dist"
  ]
}